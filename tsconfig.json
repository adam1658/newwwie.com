{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "strict": true,
    "skipLibCheck": true,

    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",

    "noEmit": true // Never emit code - let webpack build
  }
}
